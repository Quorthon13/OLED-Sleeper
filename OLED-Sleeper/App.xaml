<Application x:Class="OLED_Sleeper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1C1C1E" />
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2D2D30" />
        <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#3A3A3C" />
        <SolidColorBrush x:Key="PrimaryForegroundColor" Color="#F5F5F5" />
        <SolidColorBrush x:Key="SecondaryForegroundColor" Color="#8E8E93" />
        <SolidColorBrush x:Key="AccentColorBrush" Color="#007BFF" />
        <SolidColorBrush x:Key="DestructiveColorBrush" Color="#E81123" />
        <SolidColorBrush x:Key="SeparatorColorBrush" Color="#4A4A4C" />
    </Application.Resources>
</Application>