<Window x:Class="OLED_Sleeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OLED_Sleeper.ViewModels"
        xmlns:converters="clr-namespace:OLED_Sleeper.Converters"
        xmlns:views="clr-namespace:OLED_Sleeper.Views"
        mc:Ignorable="d"
        Title="OLED Sleeper Settings" Height="650" Width="800" MinHeight="500" MinWidth="700"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        FontFamily="Bahnschrift"
        Background="#1C1C1E"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowChrome.IsHitTestVisibleInChrome="True"
        Icon="/Assets/icon.ico">

    <Window.Resources>
        <!-- Converters for showing/hiding the config panel -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" IsReversed="False"/>
        <converters:NullToVisibilityConverter x:Key="NotNullToVisibilityConverter" IsReversed="True"/>

        <!-- Styles for the custom title bar buttons -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#3A3A3C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#2D2D30" MouseDown="TitleBar_MouseDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image Source="/Assets/icon.ico" Width="18" Height="18" Margin="8,0,0,0"/>
                    <TextBlock Text="OLED Sleeper Settings" Foreground="#F5F5F5" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowButtonStyle}" Content="&#xE921;" Click="MinimizeButton_Click" ToolTip="Minimize"/>
                    <Button Style="{StaticResource WindowButtonStyle}" Content="&#xE922;" Click="MaximizeButton_Click" ToolTip="Maximize"/>
                    <Button Style="{StaticResource CloseButtonStyle}" Content="&#xE8BB;" Click="CloseButton_Click" ToolTip="Close"/>
                </StackPanel>
            </Grid>

            <Grid Margin="15" Grid.Row="1">
                <views:MonitorLayoutView/>
            </Grid>

            <Border Grid.Row="2" MinHeight="220" Margin="15,0,15,15"
                    Background="#2D2D30" CornerRadius="8"
                    Visibility="{Binding SelectedMonitor, Converter={StaticResource NotNullToVisibilityConverter}}">
                <views:MonitorConfigurationView DataContext="{Binding SelectedMonitor.Configuration}"/>
            </Border>

            <Border Grid.Row="2" MinHeight="220" Margin="15,0,15,15"
                    Background="#2D2D30" CornerRadius="8"
                    Visibility="{Binding SelectedMonitor, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="Click a monitor above to configure its settings."
                           Foreground="#8E8E93" FontSize="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>